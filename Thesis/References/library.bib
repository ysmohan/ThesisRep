doi = {10.1152/jn.00403.2001},
file = {:C$\backslash$:/Users/yamsan167/Dropbox/Yamni/Readings/PhD/Orituning/Jonesetal2002.pdf:pdf},
isbn = {1264412649},
issn = {0022-3077},
journal = {Journal of Neurophysiology},
number = {5},
pages = {2796--2808},
