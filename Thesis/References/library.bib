file = {:C$\backslash$:/Users/yamsan167/Dropbox/Yamni/Readings/PhD/Literature{\_}Review/Celebrinietal1993.pdf:pdf},
isbn = {0952-5238 (Print)$\backslash$r0952-5238 (Linking)},
issn = {14698714},
journal = {Visual Neuroscience},
keywords = {Area VI,Neurophysiology,Orientation,Primate,Visual processing},
number = {5},
pages = {811--825},
pmid = {8217934},
publisher = {University of Melbourne Library},
title = {{Dynamics of orientation coding in area VI of the awake primate}},
volume = {10},
year = {1993}
}
@article{Dombeck2007,
