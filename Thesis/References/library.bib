file = {:C$\backslash$:/Users/yamsan167/Dropbox/Yamni/Readings/PhD/Literature{\_}Review/Xuetal2002.pdf:pdf},
isbn = {0952-5238 (Print)$\backslash$r0952-5238 (Linking)},
issn = {09525238},
journal = {Visual Neuroscience},
keywords = {Koniocellular,Magnocellular,Owl monkey,Parvocellular,Receptive fields},
number = {1},
pages = {97--108},
pmid = {12180863},
title = {{Are primate lateral geniculate nucleus (LGN) cells really sensitive to orientation or direction?}},
volume = {19},
